{
  "name": "swipealot",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .parcel-cache dist node_modules yarn.lock",
    "dev": "NETWORK=kusama parcel serve ./src/index.html",
    "build": "parcel build ./src/index.html --no-scope-hoist --detailed-report --log-level verbose --public-url ${PUBLIC_URL} && cp assets/robots.txt dist/",
    "format": "prettier -w ./src",
    "format:check": "prettier -c ./src",
    "lint": "eslint ./src --fix",
    "lint:check": "eslint ./src",
    "tsc:check": "tsc --noEmit",
    "all-checks": "yarn tsc:check && yarn format:check && yarn lint:check",
    "zombienet:setup": "zombienet setup polkadot",
    "zombienet:run": "zombienet --provider native spawn ./tests/small-network.toml"
  },
  "app": "dist/index.html",
  "targets": {
    "app": {}
  },
  "source": "src/index.tsx",
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@nextui-org/react": "1.0.0-beta.12",
    "@parcel/service-worker": "2.8.2",
    "@polkadot-onboard/core": "0.0.6-beta",
    "@polkadot-onboard/injected-wallets": "0.0.6-beta",
    "@polkadot-onboard/react": "0.0.6-beta",
    "@polkadot/api": "9.11.3",
    "@polkadot/react-identicon": "2.10.1",
    "@react-spring/web": "9.6.1",
    "@use-gesture/react": "10.2.23",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "4.7.1",
    "react-remark": "2.1.0"
  },
  "devDependencies": {
    "@parcel/compressor-brotli": "2.8.2",
    "@parcel/compressor-gzip": "2.8.2",
    "@parcel/packager-raw-url": "2.8.2",
    "@parcel/transformer-webmanifest": "2.8.2",
    "@playwright/test": "1.29.2",
    "@types/bn.js": "5.1.1",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.48.2",
    "@typescript-eslint/parser": "5.48.2",
    "@zombienet/cli": "1.3.27",
    "buffer": "5.5.0",
    "eslint": "8.32.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-react": "7.32.1",
    "parcel": "2.8.2",
    "prettier": "2.8.3",
    "process": "0.11.10",
    "typescript": "4.9.4"
  },
  "alias": {
    "@polkadot/x-fetch": "./node_modules/@polkadot/x-fetch/browser.js",
    "@polkadot/x-ws": "./node_modules/@polkadot/x-ws/browser.js",
    "@polkadot/x-textencoder": "./node_modules/@polkadot/x-textencoder/browser.js",
    "@polkadot/x-textdecoder": "./node_modules/@polkadot/x-textdecoder/browser.js"
  }
}
