{
  "name": "Swipealot",
  "version": "1.0.0",
  "license": "MIT",
  "type": "module",
  "scripts": {
    "clean": "rm -rf .parcel-cache dist node_modules yarn.lock",
    "dev": "NETWORK=kusama parcel serve ./src/index.html",
    "build": "parcel build ./src/index.html --no-scope-hoist --log-level verbose --public-url ${PUBLIC_URL} && cp assets/robots.txt dist/",
    "build:analyze": "parcel build ./src/index.html --no-scope-hoist --log-level verbose --public-url ${PUBLIC_URL} --reporter @parcel/reporter-bundle-analyzer && cp assets/robots.txt dist/",
    "format": "prettier -w ./src",
    "format:check": "prettier -c ./src",
    "lint": "eslint ./src --fix",
    "lint:check": "eslint ./src"
  },
  "app": "dist/index.html",
  "targets": {
    "app": {}
  },
  "source": "src/index.tsx",
  "browserslist": [
    "last 2 versions"
  ],
  "dependencies": {
    "@nextui-org/react": "1.0.0-beta.11",
    "@parcel/service-worker": "2.8.2",
    "@polkadot-onboard/core": "../wallet-sdk/packages/core",
    "@polkadot-onboard/injected-wallets": "../wallet-sdk/packages/injected-wallets",
    "@polkadot-onboard/react": "../wallet-sdk/packages/react",
    "@polkadot/api": "9.10.5",
    "@polkadot/react-identicon": "2.9.14",
    "@react-spring/web": "9.6.1",
    "@use-gesture/react": "10.2.23",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-iconly": "2.2.5",
    "react-remark": "2.1.0"
  },
  "devDependencies": {
    "@parcel/compressor-brotli": "2.8.2",
    "@parcel/compressor-gzip": "2.8.2",
    "@parcel/packager-raw-url": "2.8.2",
    "@parcel/reporter-bundle-analyzer": "^2.8.2",
    "@parcel/transformer-typescript-tsc": "^2.8.2",
    "@parcel/transformer-webmanifest": "2.8.2",
    "@types/bn.js": "5.1.1",
    "@types/react-dom": "18.0.10",
    "@typescript-eslint/eslint-plugin": "5.48.0",
    "@typescript-eslint/parser": "5.48.0",
    "buffer": "5.5.0",
    "eslint": "8.30.0",
    "eslint-config-prettier": "8.6.0",
    "eslint-plugin-react": "7.31.11",
    "parcel": "2.8.2",
    "prettier": "2.8.1",
    "process": "0.11.10",
    "typescript": "4.9.4"
  },
  "alias": {
    "@polkadot/x-fetch": "./node_modules/@polkadot/x-fetch/browser.js",
    "@polkadot/x-ws": "./node_modules/@polkadot/x-ws/browser.js",
    "@polkadot/x-textencoder": "./node_modules/@polkadot/x-textencoder/browser.js",
    "@polkadot/x-textdecoder": "./node_modules/@polkadot/x-textdecoder/browser.js"
  }
}
